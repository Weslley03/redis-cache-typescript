{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",  // Certifique-se de que o módulo é commonjs
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": [
    "src/**/*.ts",  // Inclui todos os arquivos .ts
    "test/**/*.ts"  // Inclui todos os testes .ts
  ]
}